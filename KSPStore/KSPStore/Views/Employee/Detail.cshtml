@model Employee
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <h3 class="text-center">Detail Page</h3>
    <div class="row justify-content-center">
        <div class="col-md-8 ">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Model.Name</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.UserName</p>
                    <p class="card-text">@Model.Address</p>
                    <p class="card-text">@Model.Email</p>
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-info">Edit</a>
                    @*adding modal in delete button*@
                    <a data-toggle="modal" href="#" data-target="#deleteModal" class="btn btn-danger text-white">Delete</a>
                    <!-- Modal -->
                    <div class="modal fade" id="deleteModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Delete Confirmation</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure? <br />
                                    <small class="text-muted">If once delete, don't undone this value!</small>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                                        <button type="submit" class="btn btn-danger">OK</button>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


