@model Employee
@{
    ViewData["Title"] = "GetEmpSearchAndUpdate";
}

<div class="container">
    <h1>Welcome</h1>

    <form asp-controller="Employee" asp-action="GetEmpSearchAndUpdate">
        <div class="form-row">
            <div class="col-2">
                <label>Student Id:</label>
            </div>
            <div class="col-4">
                <input type="text" name="Id" class="form-control" />
            </div>
            <div class="col-2">
                <input type="submit" value="Load" class="btn btn-success"/>
            </div>
        </div>
    </form>


    <form asp-controller="Employee" asp-action="GetEmpSearchAndUpdateAutoUpdated" method="post">

        <div class="form-row">
            <div class="col-2">
                <label>Name</label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Name" type="text" />
            </div>
        </div>

        <div class="form-row">
            <div class="col-2">
                <label>UserName</label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="UserName" type="text" />
            </div>
        </div>


        <div class="form-row">
            <div class="col-2">
                <label>Address</label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Address" type="text" />
            </div>
        </div>

        <div class="form-row">
            <div class="col-2">
                <label>Email</label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Email" type="text" />
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-info">Update</button>
        </div>
    </form>
</div>

